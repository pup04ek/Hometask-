//1st programm

#include <iostream>

int main() {

  int a, b;

  std::cout << "Enter value of a:" << std::endl;
  std::cin >> a;

  std::cout << "Enter value of b:" << std::endl;
  std::cin >> b;

  std::cout << "a = " << a << std::endl;
  std::cout << "b = " << b << std::endl;

  int max = (a >= b) ? a : b;

  std::cout << "max number is: " << max << std::endl;

  int min = (a <= b) ? a : b;

  std::cout << "min number is: " << min;

}



